<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
    <persistence-unit name="BookstorePU" transaction-type="RESOURCE_LOCAL">
        <description>This unit manages the CRUD operations of books</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.curtisnewbie.model.Book</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="META-INF/bookstoreCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="META-INF/bookstoreDrop.ddl"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bookstore"/>
            <property name="javax.persistence.jdbc.user" value="bsadmin"/>
            <property name="javax.persistence.jdbc.password" value="bookstoreadmin"/>
        </properties>
    </persistence-unit>
</persistence>


